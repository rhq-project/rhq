<?xml version="1.0"?>

<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

   <navigation-rule>
      <from-view-id>/rhq/resource/content/subscription.xhtml</from-view-id>
      
      <navigation-case>
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/resource/content/subscription.xhtml?id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-action>#{ResourceChannelsUIBean.deleteSelectedResourceChannels}</from-action>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/resource/content/subscription.xhtml?id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-action>#{AvailableResourceChannelsUIBean.subscribeSelectedResourceChannels}</from-action>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/resource/content/subscription.xhtml?id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>

   <navigation-rule>
      <from-view-id>/rhq/resource/content/view.xhtml</from-view-id>
      
      <navigation-case>
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/resource/content/view.xhtml?id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>createArtifact</from-outcome>
         <to-view-id>/rhq/resource/content/create.xhtml</to-view-id>
      </navigation-case>
      
   </navigation-rule>

   <navigation-rule>
      <from-view-id>/rhq/resource/content/deploy.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>uploadNew</from-outcome>
         <to-view-id>/rhq/resource/content/create.xhtml?id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-action>#{CreateNewPackageUIBean.deployExisting}</from-action>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/resource/content/confirm-create.xhtml</to-view-id>
      </navigation-case>

   </navigation-rule>

   <navigation-rule>
      <from-view-id>/rhq/resource/content/history.xhtml</from-view-id>
     
      <navigation-case>
         <from-outcome>showContentServiceRequestDetails</from-outcome>
         <to-view-id>/rhq/resource/content/history-request.xhtml?id=#{param.id}&amp;selectedRequestId=#{param.selectedRequestId}</to-view-id>
         <redirect/>
      </navigation-case>

   </navigation-rule>

   <navigation-rule>
      <from-view-id>/rhq/resource/content/history-request.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>showHistoryItem</from-outcome>
         <to-view-id>/rhq/resource/content/history-request-item.xhtml?id=#{param.id}&amp;selectedHistoryId=#{param.selectedHistoryId}&amp;selectedRequestId=#{param.selectedRequestId}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>returnToAllRequests</from-outcome>
         <to-view-id>/rhq/resource/content/history.xhtml?id=${param.id}</to-view-id>
         <redirect/>
      </navigation-case>

   </navigation-rule>

   <navigation-rule>
      <from-view-id>/rhq/resource/content/history-request-item.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>returnToRequest</from-outcome>
         <to-view-id>/rhq/resource/content/history-request.xhtml?id=#{param.id}&amp;selectedRequestId=#{param.selectedRequestId}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>stepDetails</from-outcome>
         <to-view-id>/rhq/resource/content/history-request-step-details.xhtml?id=#{param.id}&amp;selectedHistoryId=#{param.selectedHistoryId}&amp;selectedRequestId=#{param.selectedRequestId}&amp;stepId=#{param.stepId}</to-view-id>
         <redirect/>
      </navigation-case>

   </navigation-rule>

   <navigation-rule>
      <from-view-id>/rhq/resource/content/history-request-step-details.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>returnToHistory</from-outcome>
         <to-view-id>/rhq/resource/content/history-request-item.xhtml?id=#{param.id}&amp;selectedHistoryId=#{param.selectedHistoryId}&amp;selectedRequestId=#{param.selectedRequestId}</to-view-id>
         <redirect/>
      </navigation-case>

   </navigation-rule>

   <navigation-rule>
      <from-view-id>/rhq/resource/content/create.xhtml</from-view-id>
      
      <navigation-case>
         <from-action>#{CreateNewPackageUIBean.createPackage}</from-action>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/resource/content/confirm-create.xhtml</to-view-id>
      </navigation-case>

      <navigation-case>
         <from-outcome>cancel</from-outcome>
         <to-view-id>/rhq/resource/content/deploy.xhtml?id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case>
      
   </navigation-rule>

   <navigation-rule>
      <from-view-id>/rhq/resource/content/confirm-create.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>successOrFailure</from-outcome>
         <to-view-id>/rhq/resource/content/history.xhtml?id=${param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
       <from-outcome>cancel</from-outcome>
       <to-view-id>/rhq/resource/content/deploy.xhtml?id=${param.id}</to-view-id>
       <redirect/>
      </navigation-case>
      
   </navigation-rule>

   <!-- Content Source List -->
   <navigation-rule>
      <from-view-id>/rhq/content/listContentSources.xhtml</from-view-id>

      <navigation-case>
         <!-- catch all navigation-case: if any actions return 'success', go here -->
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/content/listContentSources.xhtml</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>createNewContentSource</from-outcome>
         <to-view-id>/rhq/content/createContentSource.xhtml</to-view-id>
         <redirect/>
      </navigation-case>
      
      <navigation-case>
         <!-- sorting rule --> 
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/content/listContentSources.xhtml</to-view-id>
         <redirect/>
      </navigation-case> 
      
   </navigation-rule>

   <!-- Channel List -->
   <navigation-rule>
      <from-view-id>/rhq/content/listChannels.xhtml</from-view-id>

      <navigation-case>
         <!-- catch all navigation-case: if any actions return 'success', go here -->
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/content/listChannels.xhtml</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>createNewChannel</from-outcome>
         <to-view-id>/rhq/content/createChannel.xhtml</to-view-id>
         <redirect/>
      </navigation-case>
      
      <navigation-case>
         <!-- sorting rule --> 
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/content/listChannels.xhtml</to-view-id>
         <redirect/>
      </navigation-case> 
      
   </navigation-rule>

   <!-- Content Source View -->
   <navigation-rule>
      <from-view-id>/rhq/content/contentSource.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/content/contentSource.xhtml?mode=view&amp;id=${param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>edit</from-outcome>
         <to-view-id>/rhq/content/contentSource.xhtml?mode=edit&amp;id=${param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <!-- sorting rule --> 
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/content/contentSource.xhtml?mode=view&amp;id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case> 
      
   </navigation-rule>

   <!-- Channel View -->
   <navigation-rule>
      <from-view-id>/rhq/content/channel.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/content/channel.xhtml?mode=view&amp;id=${param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>edit</from-outcome>
         <to-view-id>/rhq/content/channel.xhtml?mode=edit&amp;id=${param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>associateWithContentSources</from-outcome>
         <to-view-id>/rhq/content/channelAssociations.xhtml?id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>subscribeResources</from-outcome>
         <to-view-id>/rhq/content/channelSubscriptions.xhtml?id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <!-- sorting rule --> 
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/content/channel.xhtml?mode=view&amp;id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case> 
      
   </navigation-rule>

   <!-- Content Source Creation -->
   <navigation-rule>
      <from-view-id>/rhq/content/createContentSource.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>changedSelectedContentSourceTypeName</from-outcome>
         <to-view-id>/rhq/content/createContentSource.xhtml</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>save</from-outcome>
         <to-view-id>/rhq/content/listContentSources.xhtml</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>cancel</from-outcome>
         <to-view-id>/rhq/content/listContentSources.xhtml</to-view-id>
      </navigation-case>
      
   </navigation-rule>

   <!-- Channel Creation -->
   <navigation-rule>
      <from-view-id>/rhq/content/createChannel.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>save</from-outcome>
         <to-view-id>/rhq/content/listChannels.xhtml</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>cancel</from-outcome>
         <to-view-id>/rhq/content/listChannels.xhtml</to-view-id>
      </navigation-case>
      
   </navigation-rule>

   <!-- Channel Associations With Content Sources -->
   <navigation-rule>
      <from-view-id>/rhq/content/channelAssociations.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/content/channelAssociations.xhtml?id=${param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <!-- sorting rule --> 
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/content/channelAssociations.xhtml?id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case> 
      
   </navigation-rule>

   <!-- Channel Subscriptions -->
   <navigation-rule>
      <from-view-id>/rhq/content/channelSubscriptions.xhtml</from-view-id>

      <navigation-case>
         <from-outcome>success</from-outcome>
         <to-view-id>/rhq/content/channelSubscriptions.xhtml?id=${param.id}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <from-outcome>search</from-outcome>
         <to-view-id>/rhq/content/channelSubscriptions.xhtml?id=#{param.id}&amp;searchCategory=#{ChannelUnsubscriptionsUIBean.searchCategory}&amp;searchString=#{ChannelUnsubscriptionsUIBean.searchString}</to-view-id>
         <redirect/>
      </navigation-case>

      <navigation-case>
         <!-- sorting rule --> 
         <from-outcome>sort</from-outcome>
         <to-view-id>/rhq/content/channelSubscriptions.xhtml?id=#{param.id}</to-view-id>
         <redirect/>
      </navigation-case> 
      
   </navigation-rule>

</faces-config>