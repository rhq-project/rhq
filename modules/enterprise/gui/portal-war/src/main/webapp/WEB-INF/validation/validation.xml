          <var-name>maxlength</var-name>
          <var-value>100</var-value>
        </var>
        <msg name="maxlength" key="admin.role.error.RoleDescriptionMaxLength"/>
      </field>
    </form>

    <!-- resource forms -->
    <form name="ServerControlForm">
