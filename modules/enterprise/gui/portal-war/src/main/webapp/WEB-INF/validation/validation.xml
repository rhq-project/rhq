        <arg0 key="alert.config.edit.snmp.oid"/>
        <var>
         <var-name>mask</var-name>
         <var-value>${oid}</var-value>
        </var>
        <msg name="required"
             key="errors.required"/>
        <msg name="mask"
             key="common.error.invalid.oid"/>
      </field>

