               <displayName>RHQ</displayName>
               <workDirectory>${earDirectory}</workDirectory>
               <resourcesDir>${basedir}/target/classes</resourcesDir>
               <defaultJavaBundleDir>lib</defaultJavaBundleDir>
               <unpackTypes>war,ejb,sar</unpackTypes>
