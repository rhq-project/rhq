                  <!-- ** WARs -->

                  <webModule>
                     <groupId>${project.groupId}</groupId>
                     <artifactId>rhq-portal</artifactId>
                     <bundleFileName>rhq-portal.war</bundleFileName>
                     <contextRoot>/</contextRoot>
                  </webModule>


